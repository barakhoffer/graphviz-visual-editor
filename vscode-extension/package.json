{
  "name": "graphviz-visual-editor",
  "displayName": "Graphviz Visual Editor",
  "description": "A VSCode extension for interactive visual editing of Graphviz graphs described in the DOT language",
  "version": "1.3.0",
  "publisher": "barakhoffer",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "Graphviz",
    "DOT",
    "visual-editor",
    "graph-drawing",
    "graph-visualization"
  ],
  "activationEvents": [
    "onCustomEditor:graphviz.visualEditor"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "customEditors": [
      {
        "viewType": "graphviz.visualEditor",
        "displayName": "Graphviz Visual Editor",
        "selector": [
          {
            "filenamePattern": "*.dot"
          },
          {
            "filenamePattern": "*.gv"
          }
        ],
        "priority": "default"
      }
    ],
    "commands": [
      {
        "command": "graphviz.visualEditor.exportAsSvg",
        "title": "Graphviz: Export as SVG"
      },
      {
        "command": "graphviz.visualEditor.zoomIn",
        "title": "Graphviz: Zoom In"
      },
      {
        "command": "graphviz.visualEditor.zoomOut",
        "title": "Graphviz: Zoom Out"
      },
      {
        "command": "graphviz.visualEditor.zoomReset",
        "title": "Graphviz: Zoom Reset"
      }
    ],
    "configuration": {
      "title": "Graphviz Visual Editor",
      "properties": {
        "graphviz.engine": {
          "type": "string",
          "enum": ["dot", "neato", "fdp", "sfdp", "twopi", "circo", "osage", "patchwork"],
          "default": "dot",
          "description": "Graphviz layout engine"
        },
        "graphviz.fitGraph": {
          "type": "boolean",
          "default": false,
          "description": "Automatically fit the graph to the available drawing area"
        },
        "graphviz.transitionDuration": {
          "type": "number",
          "default": 1,
          "description": "Duration of graph transitions (in seconds)"
        },
        "graphviz.tweenPaths": {
          "type": "boolean",
          "default": true,
          "description": "Tween paths during graph transitions"
        },
        "graphviz.tweenShapes": {
          "type": "boolean",
          "default": true,
          "description": "Tween shapes during graph transitions"
        },
        "graphviz.tweenPrecision": {
          "type": "string",
          "default": "1%",
          "description": "Precision of tweening (e.g., '1%', '5%')"
        },
        "graphviz.fontSize": {
          "type": "number",
          "default": 12,
          "description": "Font size for text editor"
        },
        "graphviz.tabSize": {
          "type": "number",
          "default": 4,
          "description": "Tab size for text editor"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "lint": "eslint src --ext ts",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.0",
    "@vscode/vsce": "^2.19.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/barakhoffer/graphviz-visual-editor.git"
  },
  "license": "MIT"
}

